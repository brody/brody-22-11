---
import BaseLayout from './BaseLayout.astro';
import BlogList from '../components/BlogList.astro';

export interface Props {
  pageTitle: string;
}
const { pageTitle } = Astro.props;

// import '../styles/global.css';
---

<BaseLayout pageTitle={pageTitle}>
  <div class='flex flex-row w-full'>
    <div
      id='list'
      class='sticky shrink-0 flex-none top-0 bottom-0 hidden md:flex flex-col w-80 h-screen border-r border-neutral-200 dark:border-neutral-800 overscroll-contain overflow-y-auto'
    >
      <div
        id='list-title'
        class='w-full sticky top-0 bg-neutral-900 border-b border-neutral-200 dark:border-neutral-800 px-8 pt-12 pb-5 font-semibold text-xl text-neutral-50'
      >
        Journal
      </div>
      <div id='list-items' class='h-screen flex flex-col px-4 mb-4'>
        <BlogList />
      </div>
    </div>
    <main class='flex shrink flex-col flex-1 w-full max-w-2xl px-5 pt-12 pb-12 mx-auto md:px-8 lg:pt-32 prose'>
      <slot />
    </main>
  </div>
</BaseLayout>

<style is:global>
  *,
  #list {
    scrollbar-width: thin;
    scrollbar-color: #3f3f45 #18181b;
  }

  /* Works on Chrome, Edge, and Safari */
  *::-webkit-scrollbar {
    width: 14px;
  }

  *::-webkit-scrollbar-track {
    background: #18181b;
  }

  *::-webkit-scrollbar-thumb {
    background-color: #3f3f45;
    border-radius: 20px;
    border: 4px solid #18181b;
  }
</style>
